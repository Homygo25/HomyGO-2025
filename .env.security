# Security Configuration Template
# Add these to your .env file for enhanced security

# Session Security
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict
SESSION_HTTP_ONLY=true

# HTTPS Enforcement (set to true in production)
FORCE_HTTPS=true

# Rate Limiting Configuration
THROTTLE_LOGIN_ATTEMPTS=5
THROTTLE_LOGIN_DECAY_MINUTES=1

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=/csp-report

# Security Headers (for SecurityMiddleware)
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' https://js.stripe.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://api.stripe.com"

# Database Security
DB_SSL_MODE=require
DB_SSL_VERIFY_SERVER_CERT=true

# Backup Configuration
BACKUP_ENCRYPT=true
BACKUP_COMPRESS=true
BACKUP_RETENTION_DAYS=30

# Intrusion Detection
INTRUSION_DETECTION_ENABLED=true
SUSPICIOUS_ATTEMPT_THRESHOLD=5
IP_BLOCK_DURATION_HOURS=24

# Application Security
APP_DEBUG=false
APP_ENV=production
LOG_LEVEL=warning

# Security Monitoring
SECURITY_LOG_FAILED_LOGINS=true
SECURITY_LOG_ADMIN_ACCESS=true
SECURITY_ALERT_EMAIL=admin@homygo.com
